<h1>Listing posts</h1>

<% @posts.each do |post| %>
  <div>
    <h2><%= post.title %></h2>
    <p><%= post.body %></p>
    <span><%= link_to 'Show', post_path(post) %></span> |
    <span><%= link_to 'Edit', edit_post_path(post) %></span> |
    <span><%= link_to 'Destroy', post_path(post), method: :delete,data: { confirm: 'Are you sure?' } %></span>
  </div>
<% end %>

<button><%= link_to 'New Post', new_post_path %></button>
